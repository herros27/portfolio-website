# Environment Variables Template
# Copy this file to .env.local and fill in your values

# ======================
# Database (PostgreSQL)
# ======================
# For local development, you can use Docker:
# docker run --name portfolio-db -e POSTGRES_PASSWORD=password -e POSTGRES_DB=portfolio -p 5432:5432 -d postgres
#
# For production, use a managed service:
# - Supabase: https://supabase.com
# - Railway: https://railway.app
# - Neon: https://neon.tech
# - PlanetScale (MySQL): https://planetscale.com

DATABASE_URL="postgresql://user:password@localhost:5432/portfolio?schema=public"

# ======================
# Authentication (Auth.js)
# ======================
# Generate a secret: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here"
AUTH_URL="http://localhost:3000"

# ======================
# Cloudinary (Image Storage)
# ======================
# Get these from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ======================
# Admin Seed Credentials
# ======================
# Used for initial admin account creation
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="your-secure-password"

# ======================
# Resend (Email - existing)
# ======================
RESEND_API_KEY="your-resend-api-key"
